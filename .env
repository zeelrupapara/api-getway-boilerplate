# Basic configuration for testing GreenLync API Gateway
BASE_URL=http://127.0.0.1:8888
LOG_FILE=./logs/app.log
HTTP_HOST=0.0.0.0
HTTP_PORT=:8888
OAUTH_TOKEN_EXPIRES_IN=3600
OAUTH_LONG_TOKEN_EXPIRES_IN=86400
APP_REPORTS=./reports

# GRPC (not used in boilerplate but required by config)
GRPC_HOST=127.0.0.1
GRPC_PORT=:9999

# Redis configuration
REDIS_URL=redis://127.0.0.1:6379
REDIS_PASSWORD=none

# MySQL configuration
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DB=greenlync
MYSQL_USE_SSL=false
MYSQL_CACERT_PATH=none

# InfluxDB (not used in boilerplate but required by config)
INFLUX_HOST=127.0.0.1
INFLUX_PORT=8086
INFLUX_Token=test_token
INFLUX_Org=greenlync
INFLUX_DEFAULT_BUCKET=greenlync

# NATS configuration
NATS_HOST=127.0.0.1
NATS_PORT=4222

# SMTP configuration (optional for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_FROM=noreply@greenlync.com
SMTP_PASSWORD=test_password
SMTP_LOGIN=test_user